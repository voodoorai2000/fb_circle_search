%h1 Círculos nuevos
= link_to 'Buscar en Facebook',     search_circles_url
%br/
= link_to 'Ver círculos revisados', revised_circles_url
%table.table
  %thead
    %tr
      %th Nombre
      %th Fecha
      %th Tipo
      %th Revisado
      %th{colspan: "3"}
  %tbody
    - @circles.each do |circle|
      %tr
        %td
          = link_to circle.name, facebook_circle_url(circle)
        %td
          Hace #{time_ago_in_words(circle.created_at)}
        %td
          = t("text.#{circle.kind}")
        %td{style: "text-align:center"}
          = form_for circle, remote: true, method: :put do |f|
            = f.check_box :revised, {class: 'js-circle-visited'}
