<h1>Círculos nuevos</h1>

<%= link_to 'Buscar en Facebook',   refresh_groups_url %><br/>
<%= link_to 'Ver círculos revisados', revised_groups_url %>

<table style="padding-top:50px">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Fecha</th>
      <th>Revisado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |page| %>
      <tr>
        <td><%= link_to page.name, facebook_group_url(page) %></td>
        <td style="width:150px;text-align:center">
          Hace <%= time_ago_in_words(page.created_at) %>
        </td>
        <td style="text-align:center">
          <%= form_for page, remote: true, method: :put do |f| %>
            <%# f.check_box :revised %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>