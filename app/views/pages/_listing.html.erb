<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created at</th>
      <th>Revised</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr><td><h1><%= title %></h1></td></tr>
    <% pages.each do |page| %>
      <tr>
        <td><%= link_to page.name, facebook_page_url(page) %></td>
        <td style="width:150px;text-align:center"><%= time_ago_in_words(page.created_at) %></td>
        <td style="text-align:center">
        <%= form_for page, remote: true, method: :put do |f| %>
          <%= f.check_box :revised %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>